{
  "exclude": [
    "./dist/**", "./node_modules/**"
  ],
  "include": [
    "./src/**/*",
  ],
  "compilerOptions": {
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "es6",
    "allowJs": true,
    "module": "CommonJS",
    "lib": [
      "ESNext"
    ],
    "sourceMap": true,
    "outDir": "dist",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "esModuleInterop": true,
    "strict": true,
    "strictFunctionTypes": false
  }
}